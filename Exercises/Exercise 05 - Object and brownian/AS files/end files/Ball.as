package  {	import flash.display.BitmapData;		public class Ball {		public var x:Number;		public var y:Number;		public var dim:int;		public var bd:BitmapData;				public function Ball(_x:uint = 0, _y:uint = 0,_dim:uint = 40, _bd:BitmapData = null) {			this.x = _x;			this.y = _y;			this.dim = _dim;			this.bd = _bd;		}				public function moveBall(_x:Number,_y:Number):void		{			this.x += _x;			this.y += _y;		}				public function drawBall():void		{			this.bd.setPixel(this.x, this.y, 0x990000);		}	}	}