package  {	import flash.display.Sprite;		public class Ball {		public var x:Number;		public var y:Number;		public var dim:int;		public var canvas:Sprite;				public function Ball(_x:uint = 0, _y:uint = 0,_dim:uint = 40, _canvas:Sprite = null) {			this.x = _x;			this.y = _y;			this.dim = _dim;			this.canvas = _canvas;		}				public function moveBall(_x:Number,_y:Number):void		{			this.x += _x;			this.y += _y;		}				public function drawBall():void		{			this.canvas.graphics.beginFill(0x990000, 0.1);			this.canvas.graphics.drawCircle(this.x,this.y,this.dim);			this.canvas.graphics.endFill();		}	}	}